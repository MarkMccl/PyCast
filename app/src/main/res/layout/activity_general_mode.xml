<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="killianmills.pycast.GeneralMode">

    <Button
        android:background="@drawable/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Send"
        android:id="@+id/button1"
        style="@style/button_text"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignRight="@+id/buttonRightk"
        android:layout_alignEnd="@+id/buttonRightk" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint = "Enter message"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/buttonRightClick"
        android:layout_toStartOf="@+id/buttonUpk"
        android:layout_toLeftOf="@+id/buttonUpk" />

    <Button
        android:background="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Click"
        android:id="@+id/buttonLeftClick"
        style="@style/button_text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Click"
        android:id="@+id/buttonRightClick"
        style="@style/button_text"
        android:layout_alignTop="@+id/buttonLeftClick"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

    <Button
        android:background="@drawable/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/buttonEnterClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/button_text"/>

    <Button
        android:background="@drawable/red_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/buttonRightk"
        android:layout_alignTop="@+id/buttonDownk"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/red_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓"
        android:id="@+id/buttonDownk"
        android:layout_below="@+id/buttonUpk"
        android:layout_toLeftOf="@+id/buttonRightk"
        android:layout_toStartOf="@+id/buttonRightk" />

    <Button
        android:background="@drawable/red_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/buttonLeftk"
        android:layout_alignTop="@+id/buttonEnterClick"
        android:layout_toLeftOf="@+id/buttonDownk"
        android:layout_toStartOf="@+id/buttonDownk" />

    <Button
        android:background="@drawable/red_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↑"
        android:id="@+id/buttonUpk"
        android:layout_above="@+id/buttonLeftk"
        android:layout_toRightOf="@+id/buttonLeftk"
        android:layout_toEndOf="@+id/buttonLeftk" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/orangeborder"
        android:layout_above="@+id/buttonLeftClick"
        android:layout_alignLeft="@+id/buttonLeftClick"
        android:layout_alignStart="@+id/buttonLeftClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageGenMouse"
        android:src="@drawable/mouse"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

</RelativeLayout>
