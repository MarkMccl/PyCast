<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="killianmills.pycast.GeneralMode">


    <Button
        android:background="@drawable/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leftClick"
        android:id="@+id/leftClick"
        style="@style/button_text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/mouse"
        android:layout_alignStart="@+id/mouse" />/>


    <Button
        android:background="@drawable/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightClick"
        android:id="@+id/rightClick"
        style="@style/button_text"
        android:layout_alignBottom="@+id/leftClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />/>

    <Button
        android:background="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mouseButton"
        android:id="@+id/mouse"
        style="@style/button_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rightClick"
        android:layout_alignRight="@+id/rightClick"
        android:layout_alignEnd="@+id/rightClick" />/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="text"
        style="@style/button_text"
        android:layout_below="@+id/rightClick"
        android:layout_toLeftOf="@+id/enterButton"
        android:layout_alignLeft="@+id/leftButton"
        android:layout_alignStart="@+id/leftButton" />/>

    <Button
        android:background="@drawable/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendTextButton"
        android:id="@+id/sendButton"
        style="@style/button_text"
        android:layout_below="@+id/rightClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />/>

    <Button
        android:background="@drawable/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↑"
        android:id="@+id/upButton"
        style="@style/button_text"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton" />/>

    <Button
        android:background="@drawable/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓"
        android:id="@+id/downButton"
        style="@style/button_text"
        android:layout_alignTop="@+id/leftButton"
        android:layout_toRightOf="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton" />/>

    <Button
        android:background="@drawable/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/leftButton"
        style="@style/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />/>

    <Button
        android:background="@drawable/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/rightButton"
        style="@style/button_text"
        android:layout_alignBottom="@+id/downButton"
        android:layout_toRightOf="@+id/downButton"
        android:layout_toEndOf="@+id/downButton" />/>

    <Button
        android:background="@drawable/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterButton"
        android:id="@+id/enterButton"
        style="@style/button_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sendButton"
        android:layout_alignBottom="@+id/rightButton" />/>
</RelativeLayout>
